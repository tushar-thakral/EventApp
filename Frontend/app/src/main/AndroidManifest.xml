<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.appname">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpScreen" />
        <activity android:name=".SignInScreen" />
        <activity
            android:name=".InterestActivity"
            android:label="@string/title_activity_interest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClubNamesActivity"
            android:label="@string/title_activity_club_names"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseCollegeActivity"
            android:label="@string/title_activity_choose_college"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsInTheClubActivity"
            android:label="@string/title_activity_events_in_the_club"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnEventDetailsActivity"
            android:label="@string/title_activity_an_event_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterStatusActivity"
            android:label="@string/title_activity_register_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsInNearbyClgsActivity"
            android:label="@string/title_activity_events_in_nearby_clgs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ParseJSONArray"></activity>
        <activity android:name=".ParseJSONObject"></activity>
        <activity android:name=".ParseJSONArrayObject"></activity>
        <activity android:name=".JSONParseActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TestActivity" />
        <activity
            android:name=".AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>